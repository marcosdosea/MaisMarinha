@using Microsoft.AspNetCore.Identity
@using MaisMarinhaWeb.Areas.Identity.Data

@inject SignInManager<UsuarioIdentity> SignInManager
@inject UserManager<UsuarioIdentity> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="menu-item nav-link text-light mr-1" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
        <p class="primary mb-0">Gerenciar Conta</p>
    </a>
    <form id="logoutForm" class="menu-item nav-link text-light mr-1" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button id="logout" type="submit" class="br-button primary dark-mode mr-3">Logout</button>
    </form>
}
else
{
    <a class="menu-item nav-link text-light mr-1 divider" asp-area="Identity" asp-page="/Account/Login">
        <p class="primary mb-0">Login</p>
    </a>
}
