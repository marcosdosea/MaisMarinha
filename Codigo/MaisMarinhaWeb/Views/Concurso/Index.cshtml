@model IEnumerable<MaisMarinhaWeb.Models.ConcursoModel>

@{
    ViewData["Title"] = "Concursos";
}
<link rel="stylesheet" type="text/css" href="~/lib/datatable/css/jquery.dataTables.min.css" />

<h1 class="mt-3 mb-3">Concursos</h1>

<p>
    <a class="br-button primary mt-3 mb-3" asp-action="Create">Adicionar Novo</a>
</p>


<table id="tableConcurso" class="table mt-3">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.DataInicialInscricao)</th>
            <th>@Html.DisplayNameFor(model => model.DataFinalInscricao)</th>
            <th>@Html.DisplayNameFor(model => model.DataProva)</th>
            <th>@Html.DisplayNameFor(model => model.Escolaridade)</th>
            <th>Opções</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataInicialInscricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataFinalInscricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataProva)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Escolaridade)
                </td>
                <td>
                    <i class="fas fa-edit"></i>
                    @Html.ActionLink("Detalhes", "Details", new {  id=item.Id  })
                    <i class="fas fa-trash-alt"></i>
                    @Html.ActionLink("Deletar", "Delete", new {  id=item.Id  })
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tableConcurso').DataTable({
                language: {
                    url: '/lib/datatable/js/pt-BR.json'
                }
            });
        });
    </script>

    <script src="~/lib/datatable/js/jquery.dataTables.min.js"></script>
}
